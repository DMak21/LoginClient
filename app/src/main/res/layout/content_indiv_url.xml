<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_individual_ssid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tk.deepesh.loginclient.Settings.IndivUrlActivity"
    tools:showIn="@layout/activity_indiv_url">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/url_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/url_text"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/url_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/url_hint"
                android:inputType="textUri"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/parameters_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll3"
            android:layout_marginTop="12dp"
            android:text="@string/parameters_text"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/parameters_text"
            android:orientation="horizontal">

            <com.bigmercu.cBox.CheckBox
                android:id="@+id/checkbox_username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="10dp"
                app:check_style="hook"
                app:check_text=""
                app:color_after="@color/colorText2"
                app:color_before="@color/colorText"
                app:is_circle_border="true"
                app:show_border="true" />

            <EditText
                android:id="@+id/username_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:inputType="text"
                android:text="@string/username_text"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="@string/colon"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="@string/from_login_screen"
                android:textAllCaps="true"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll1"
            android:orientation="horizontal">

            <com.bigmercu.cBox.CheckBox
                android:id="@+id/checkbox_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="10dp"
                app:check_style="hook"
                app:check_text=""
                app:color_after="@color/colorText2"
                app:color_before="@color/colorText"
                app:is_circle_border="true"
                app:show_border="true" />

            <EditText
                android:id="@+id/password_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:inputType="text"
                android:text="@string/password_text"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="@string/colon"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="@string/from_login_screen"
                android:textAllCaps="true"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll2"
            android:orientation="horizontal">

            <com.bigmercu.cBox.CheckBox
                android:id="@+id/checkbox_param3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="10dp"
                app:check_style="hook"
                app:check_text=""
                app:color_after="@color/colorText2"
                app:color_before="@color/colorText"
                app:is_circle_border="true"
                app:show_border="true" />

            <EditText
                android:id="@+id/param3_key"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="@string/key"
                android:inputType="none"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="@string/colon"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/param3_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="@string/value"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll4"
            android:orientation="horizontal">

            <com.bigmercu.cBox.CheckBox
                android:id="@+id/checkbox_param4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="10dp"
                app:check_style="hook"
                app:check_text=""
                app:color_after="@color/colorText2"
                app:color_before="@color/colorText"
                app:is_circle_border="true"
                app:show_border="true" />

            <EditText
                android:id="@+id/param4_key"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="@string/key"
                android:inputType="none"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="@string/colon"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/param4_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="@string/value"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll5"
            android:orientation="horizontal">

            <com.bigmercu.cBox.CheckBox
                android:id="@+id/checkbox_param5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="10dp"
                app:check_style="hook"
                app:check_text=""
                app:color_after="@color/colorText2"
                app:color_before="@color/colorText"
                app:is_circle_border="true"
                app:show_border="true" />

            <EditText
                android:id="@+id/param5_key"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="@string/key"
                android:inputType="none"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="@string/colon"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/param5_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="@string/value"
                android:textSize="18sp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/insecure_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll6"
            android:layout_marginTop="4dp"
            android:text="@string/insecure_connection" />

        <TextView
            android:id="@+id/on_successful_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/insecure_connection"
            android:layout_marginTop="12dp"
            android:text="@string/on_successful_request"
            android:textSize="18sp" />


        <CheckBox
            android:id="@+id/checkbox_next_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/on_successful_request"
            android:layout_marginTop="4dp"
            android:text="@string/execute_next_request_if" />

        <LinearLayout
            android:id="@+id/ll7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkbox_next_request"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/next_request_regex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/regex"
                android:inputType="none"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="@string/colon"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/next_request_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/value"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll7"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="@string/result" />

            <EditText
                android:id="@+id/result_regex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/regex"
                android:textSize="18sp" />

        </LinearLayout>

        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll8"
            android:text="@string/save" />

    </RelativeLayout>

</ScrollView>